@using eShop.ViewModels.Catalog.Categories
@{
    string culture = CultureInfo.CurrentCulture.Name;
}
@model List<CategoryVm>
<div id="sidebar" class="span3">
    <div class="well well-small"><a id="myCart" href="/@culture/Cart"><img src="/themes/images/ico-cart.png" alt="cart">@ViewData["TotalItem"] <localize>Items in your cart</localize><span class="badge badge-warning pull-right">@(Convert.ToDecimal(ViewData["Total"]).ToString("n0"))</span></a></div>
    <ul id="sideManu" class="nav nav-tabs nav-stacked">
        @{
            //lấy ra danh sách ko parentId
            var parents = Model.Where(x => x.ParentId == null).ToList();
            foreach (var itemParent in parents)
            {
                //childs
                var childs = Model.Where(x => x.ParentId == itemParent.Id);
                if (childs.Any())
                {
                    <li class="subMenu open">
                        <a>@itemParent.Name</a>
                        <ul>
                            @foreach (var item in childs)
                            {
                                <li><a class="active" href="/@culture/@_loc.GetLocalizedString("CategoryUrl")/@item.Id"><i class="icon-chevron-right"></i>@item.Name</a></li>
                            }
                        </ul>
                    </li>
                }
                else
                {
                    <li><a href="/@culture/@_loc.GetLocalizedString("CategoryUrl")/@itemParent.Id">@itemParent.Name</a></li>
                }
            }
        }
    </ul>
