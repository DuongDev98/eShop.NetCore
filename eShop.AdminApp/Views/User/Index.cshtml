@using eShop.ViewModels.System.Users
@using eShop.ViewModels.Common
@model PagedResult<UserVm>
@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script>
        $(document).ready(function(){
            setTimeout(()=>{
                $('#alertMessage').fadeOut("slow");
            }, 2000);
        });
    </script>
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Danh sách người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách người dùng</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <a class="btn btn-success" asp-action="Create">Tạo mới tài khoản</a>
                </div>

                <form asp-action="Index" method="get" class="col-6">
                    <div class="row justify-content-end">
                        <div class="col-4">
                            <input class="form-control" type="text" placeholder="Nhập dữ liệu tìm kiếm" name="keyword" value="@ViewData["keyword"]">
                        </div>
                        <div class="col-2">
                            <button type="submit" class="btn btn-info">Tìm kiếm</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="card-body">

            @{
                if (ViewData["successMessage"] != null)
                {
                    <div id="alertMessage" class="alert alert-success" role="alert">
                        @ViewData["successMessage"]
                    </div>
                }
            }

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Tên
                        </th>
                        <th>
                            Họ
                        </th>
                        <th>
                            Điện thoại
                        </th>
                        <th>
                            Tài khoản
                        </th>
                        <th>
                            Email
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete",  new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Component.InvokeAsync("Pager", Model)
        </div>
    </div>
</div>